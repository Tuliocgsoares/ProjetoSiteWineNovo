</head>


<!--header-->
<%- include('./partials/header') %>
<!-- header-->


    <main>
        <section class="Resumo-da-Compra">
          <div class="container-compra">
            <div class="text-title-resume">
              <div class="img-resume-001">
                <h4 class="text-0001"> Resumo do Pedido </h4>
                <img src="images/img1.png" alt="Kit de Vinhos com 10 Unidades">
                <div class="text-name-products">
                  <p> Kit 10 - Vinhos de Classe </p>
                </div>
                <div class="quantity-of-products">
                  <h6 class="quantity"> Quantidade: </h6>
                  <form action="checkout.html" method="POST">
                    <label for="quantity-01"></label>
                    <select name="Quantidade" id="quantidade-produtos">
                      <option value="1"> 0 </option>
                      <option value="1"> 1 </option>
                      <option value="1"> 2 </option>
                      <option value="1"> 3 </option>
                      <option value="1"> 4 </option>
                      <option value="1"> 5 </option>
                      <option value="1"> 6 </option>
                      <option value="1"> 7 </option>
                      <option value="1"> 8 </option>
                      <option value="1"> 9 </option>
                      <option value="1"> 10 </option>
                    </select>
                    <div class="delete-products">
                      <a href="" class="delete-products-car"><li> Remover </li></a>
                    </div>
                  </form>
                  <div class="quantity-and-value-products">
                    <div class="quantity-0001">
                      <hr class="row Footer__separator-checkout"></hr>
                      <p class="quantity-of-products-resume"> 01 Produto </p>
                      <div>
                        <span class="products-value">
                        <h6> R$299,90 </h6>
                        </span>
                      <div class="shipping delivery">
                        <p class="delivery-text-resume"> Frete </p>
                        <span class="delivery-value">
                          <h6> R$14,90 </h6>
                          </span>
                      </div>
                      <div class="value-total">
                        <hr class="row Footer__separator-checkout"></hr>
                        <p class="value-of-products-total-resume"> Total </p>
                        <span class="delivery-value">
                          <h6> R$314,80 </h6>
                        </span>
                      </div>  
                      <div class="pay">
                        <h6 class="pay-go-01"> Ir para pagamento </h6>
                      </div>                   
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="address-delivery">
            <hr class="row Footer__separator-checkout"></hr>
            <p> Endereço de Entrega </p>
          </div>
          <div class="">
            <div class="quantity-of-products">
              <h6 class="quantity"> Onde você quer receber? </h6>
              <form action="checkout.html" method="POST">
                <label for="quantity-01"></label>
                <select name="Quantidade" id="quantidade-produtos">
                  <option value="1"> Escolha seu Endereço </option>
                  <option value="1"> Casa </option>
                </select>
                <div class="delete-products">
                  <a href="" class="delete-products-car"><li> Remover </li></a>
                </div>
              </form>
              <div class="address-1"> Rua Maria das Graças, 483 </div>
              <div class="address-2"> São Carlos - São Paulo/SP - CEP: 10.000-00 </div>
          </div>
        </section>
